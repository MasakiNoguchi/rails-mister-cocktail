  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <%= link_to "Upload Your Recipe", new_cocktail_path, class: "bttn-dark car-position" %>
    <h1 class="main-header">HAVE A DRINK</h1>
 <!--    <p class = "sub-header">Share interesting cocktail recipes from around the world.</p> -->

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <div class="car-img" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://images.pexels.com/photos/452740/pexels-photo-452740.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940)">
          <p class="sub-header">Find interesting cocktail recipes from around the world.</p>
        </div>
      </div>


      <div class="item">
        <div class="car-img" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://images.pexels.com/photos/1090668/pexels-photo-1090668.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940)">
          <p class="sub-header">Share your own unique recipes with fellow mixers.</p>
        </div>
      </div>

      <div class="item">
        <div class="car-img" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://images.pexels.com/photos/613037/pexels-photo-613037.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940)">
          <p class="sub-header">What are you waiting for?</p>
        </div>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

